{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "outDir": "./lib",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": false,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext"
    ]
  },
  "exclude": []
}
